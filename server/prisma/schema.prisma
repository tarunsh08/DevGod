generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id         String    @id @default(uuid())
  clerkId    String    @unique            // maps to Clerk userId
  name       String
  email      String?   @unique            // optional; Clerk is source of truth
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  // Relations
  likes      Like[]
  comments   Comment[]

  @@index([clerkId])
}

model Developer {
  id          String    @id @default(uuid())
  clerkId     String    @unique           // maps to Clerk userId
  name        String
  email       String?   @unique
  bio         String?
  skills      String[]                      // text[]
  socialLinks Json?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  projects    Project[]
  likes       Like[]
  comments    Comment[]

  @@index([clerkId])
}

model Project {
  id          String    @id @default(uuid())
  developerId String
  title       String
  description String
  useCase     String
  howToUse    String
  techStack   String[]                      // text[]
  category    String
  demoLink    String
  repoLink    String
  images      String[]                      // text[]
  likesCount  Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  developer   Developer @relation(fields: [developerId], references: [id], onDelete: Cascade)
  likes       Like[]
  comments    Comment[]

  @@index([developerId])
  @@index([createdAt])
}

model Like {
  id           String     @id @default(uuid())
  projectId    String
  userId       String?                         // either userId or developerId set
  developerId  String?
  createdAt    DateTime   @default(now())

  // Relations
  project      Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user         User?      @relation(fields: [userId], references: [id], onDelete: Cascade)
  developer    Developer? @relation(fields: [developerId], references: [id], onDelete: Cascade)

  // Prevent duplicate likes by the same actor on the same project
  @@unique([projectId, userId])
  @@unique([projectId, developerId])

  @@index([projectId])
  @@index([userId])
  @@index([developerId])
}

model Comment {
  id           String     @id @default(uuid())
  projectId    String
  userId       String?                         // either userId or developerId set
  developerId  String?
  content      String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  // Relations
  project      Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user         User?      @relation(fields: [userId], references: [id], onDelete: Cascade)
  developer    Developer? @relation(fields: [developerId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([userId])
  @@index([developerId])
}
